{
  "clearMocks": true,
  "extensionsToTreatAsEsm": [".ts"],
  "coverageProvider": "v8",
  "moduleNameMapper": {
    "^(\\.{1,2}/.*)\\.js$": "$1"
  },
  "transform": {
    "^.+\\.ts?$": [
      "ts-jest",
      {
        "useESM": true
      }
    ]
  },
  "transformIgnorePatterns": ["/node_modules/(?!@azns/resolver-core).+\\.js$"]
}
